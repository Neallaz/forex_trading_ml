# .env.example
# API Keys
ALPHA_VANTAGE_API_KEY=your_key_here
YAHOO_API_KEY=optional
FINNHUB_API_KEY=optional

# تنظیمات معاملاتی
INITIAL_CAPITAL=10000
MAX_POSITION_SIZE=0.1  # 10% سرمایه
STOP_LOSS_PERCENT=0.02  # 2%
TAKE_PROFIT_PERCENT=0.04  # 4%

# تنظیمات مدل
TRAIN_TEST_SPLIT=0.8
LOOKBACK_WINDOW=60
FORECAST_HORIZON=5  # پیش‌بینی 5 دوره آینده

# جفت‌ارزها
CURRENCY_PAIRS=EURUSD,GBPUSD,USDJPY
TIMEFRAME=1h

# لاگ‌گیری
LOG_LEVEL=INFO